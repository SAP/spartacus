{
  "$schema": "http://json-schema.org/schema",
  "$id": "OppsSchematics",
  "title": "OPPS Schematics",
  "type": "object",
  "properties": {
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "projectName"
      }
    },
    "debug": {
      "description": "Display additional details during the running process.",
      "type": "boolean",
      "default": false
    },
    "features": {
      "type": "array",
      "uniqueItems": true,
      "default": ["OPPS"]
    }
  },
  "required": []
}
